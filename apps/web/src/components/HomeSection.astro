---
interface Props {
  title: string;
  description?: string;
  children?: any;
  id: string;
  background?: 'white' | 'slate';
}

const { title, description, children, id, background = 'white' } = Astro.props;
const bgClass = background === 'slate' ? 'bg-slate-50' : 'bg-white';
---

<section id={id} class={`min-h-screen py-24 ${bgClass}`}>
  <div class="max-w-7xl mx-auto px-4">
    <div class="mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
        {title}
      </h2>
      {description && (
        <p class="text-xl text-slate-600">
          {description}
        </p>
      )}
    </div>
    <slot />
  </div>
</section>
