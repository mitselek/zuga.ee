---
interface VideoItem {
  platform: 'youtube' | 'vimeo' | 'err';
  video_id?: string;
  title?: string;
  url: string;
  source?: string;
  date?: string;
}

interface Props {
  videos: VideoItem[];
}

const { videos } = Astro.props;

function getEmbedUrl(video: VideoItem): string {
  if (video.platform === 'youtube') {
    return `https://www.youtube-nocookie.com/embed/${video.video_id}`;
  } else if (video.platform === 'vimeo') {
    return `https://player.vimeo.com/video/${video.video_id}`;
  }
  return '';
}
---

{videos && videos.length > 0 && (
  <div class="grid grid-cols-1 gap-8 max-w-4xl mx-auto">
    {videos.map((video) => (
      <div class="rounded-lg overflow-hidden shadow-xl">
        {video.title && (
          <div class="px-6 py-3" style="background-color: var(--color-primary);">
            <h3 class="text-lg font-semibold text-white">{video.title}</h3>
            {video.source && video.date && video.platform === 'err' && (
              <p class="text-sm text-white/80 mt-1">{video.source} â€¢ {new Date(video.date).toLocaleDateString('et-EE')}</p>
            )}
          </div>
        )}
        <div class="aspect-video bg-gray-900">
          {video.platform === 'err' ? (
            <video
              controls
              preload="metadata"
              class="w-full h-full"
              src={video.url}
            >
              Your browser does not support the video element.
            </video>
          ) : (
            <iframe
              src={getEmbedUrl(video)}
              title={video.title || 'Performance video'}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            />
          )}
        </div>
      </div>
    ))}
  </div>
)}
