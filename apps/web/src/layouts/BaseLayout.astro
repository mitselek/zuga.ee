---
interface Props {
  title: string;
  description?: string;
  language: string;
}

const { title, description, language } = Astro.props;
---

<!DOCTYPE html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Zuga Theatre</title>
    <meta name="description" content={description || 'Zuga Theatre performances'} />
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <a href={`/${language}/`} class="text-2xl font-bold text-gray-900">
            Zuga Theatre
          </a>
          <slot name="language-switcher" />
        </div>
      </nav>
    </header>
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    
    <footer class="bg-white border-t border-gray-200 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-center text-gray-600">
          Â© {new Date().getFullYear()} Zuga Theatre
        </p>
      </div>
    </footer>
  </body>
</html>
